{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'plemeshko'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=plemeshko",
                    "--package=plemeshko"
                ],
                "filter": {
                    "name": "plemeshko",
                    "kind": "bin"
                }
            },
            "args": ["save.json"],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"]
        },
    ]
}
